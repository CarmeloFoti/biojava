<?xml version="1.0"?>

<!DOCTYPE alphabetManager [
  <!ELEMENT alphabetManager (symbol|alphabet)*>

  <!ELEMENT symbol (short, long, description?)>
  <!ATTLIST symbol
    name	ID	#IMPLIED>

  <!ELEMENT short (#PCDATA)>
  <!ELEMENT long (#PCDATA)>
  <!ELEMENT description (#PCDATA)>

  <!ELEMENT alphabet (name, description, (symbol|symbolref)*, tokenizer*)>
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT symbolref EMPTY>
  <!ATTLIST symbolref
    name	IDREF	#REQUIRED>

  <!ELEMENT tokenizer (map)*>
  <!ATTLIST tokenizer
    name	CDATA #REQUIRED
    tokenLength	CDATA #IMPLIED>

  <!ELEMENT map EMPTY>
  <!ATTLIST map
    token	CDATA #REQUIRED
    symbol	IDREF #REQUIRED>
]>

