<?xml version="1.0"?>

<!DOCTYPE alphabetManager [
  <!ELEMENT alphabetManager (symbol|alphabet)*>

  <!ELEMENT symbol (short, long?, description?)>
  <!ATTLIST symbol
    name	ID	#IMPLIED>

  <!ELEMENT short (#PCDATA)>
  <!ELEMENT long (#PCDATA)>
  <!ELEMENT description (#PCDATA)>

  <!ELEMENT ambiguity (symbol, symbolref*)>

  <!ELEMENT alphabet (description?, (symbol|symbolref)*, ambiguity*)>
  <!ATTLIST alphabet
    name ID #IMPLIED
    parent IDREF #IMPLIED>
    
  <!ELEMENT name (#PCDATA)>
  <!ELEMENT symbolref EMPTY>
  <!ATTLIST symbolref
    name	IDREF	#REQUIRED>
]>

<alphabetManager>
  <symbol name="adenine">
    <short>a</short>
    <long>adenine</long>
    <description>pairs with T in DNA, and U in RNA</description>
  </symbol>
  <symbol name="guanine">
    <short>g</short>
    <long>guanine</long>
    <description>pairs with C</description>
  </symbol>
  <symbol name="cytosine">
    <short>c</short>
    <long>cytosine</long>
    <description>pairs with G</description>
  </symbol>
  <symbol name="thymine">
    <short>t</short>
    <long>thymine</long>
    <description>pairs with A</description>
  </symbol>
  <symbol name="uracil">
    <short>u</short>
    <long>uracyl</long>
    <description>pairs with A, replacing T in RNA</description>
  </symbol>

