<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.bio.SimpleBioEntry" table="bioentry">

        <id name="id" type="long" unsaved-value="null">
            <column name="bioentry_id" sql-type="long" unique="true" not-null="true"/>
            <generator class="identity"/>
        </id>

        <property name="name">
            <column name="name" sql-type="string" length="32" not-null="true"/>
        </property>
        <property name="identifier">
            <column name="identifier" sql-type="string" length="32" not-null="false"/>
        </property>
        <property name="accession">
            <column name="accession" sql-type="string" length="32" not-null="true"/>
        </property>        
        <property name="description">
            <column name="description" sql-type="text" not-null="false"/>
        </property>       
        <property name="version">
            <column name="version" sql-type="integer" length="2" not-null="true"/>
        </property>      
        <property name="division">
            <column name="division" sql-type="string" length="6" not-null="false"/>
        </property>    
        <many-to-one name="taxon" class="org.biojavax.bio.taxa.SimpleNCBITaxon" cascade="persist,merge,save-update">
            <column name="taxon_id" not-null="false"/>
        </many-to-one>
        <many-to-one name="namespace" class="org.biojavax.SimpleNamespace" cascade="persist,merge,save-update">
            <column name="biodatabase_id" not-null="true"/>
        </many-to-one>
        <set name="comments" lazy="false" cascade="all-delete-orphan" sort="natural">
            <key column="bioentry_id" not-null="true"/>
            <one-to-many class="org.biojavax.SimpleComment"/>
        </set>
        <set name="relationships" lazy="false" cascade="all-delete-orphan" sort="natural">
            <key column="object_bioentry_id" not-null="true"/>
            <one-to-many class="org.biojavax.bio.SimpleBioEntryRelationship"/>
        </set>
        <set name="rankedDocRefs" table="bioentry_reference" lazy="false" sort="natural">
            <key column="bioentry_id" not-null="true"/>
            <composite-element class="org.biojavax.SimpleRankedDocRef">
                <many-to-one name="documentReference" class="org.biojavax.SimpleDocRef" cascade="persist,merge,save-update">
                    <column name="reference_id" not-null="true"/>
                </many-to-one>   
                <property name="rank">
                    <column name="rank" sql-type="integer" length="4" not-null="true"/>
                </property>   
                <property name="start">
                    <column name="start_pos" sql-type="integer" length="10" not-null="false"/>
                </property>    
                <property name="end">
                    <column name="end_pos" sql-type="integer" length="10" not-null="false"/>
                </property> 
            </composite-element>
        </set>
        <set name="rankedCrossRefs" table="bioentry_dbxref" lazy="false" sort="natural">
            <key column="bioentry_id" not-null="true"/>
            <composite-element class="org.biojavax.SimpleRankedCrossRef">
                <many-to-one name="crossRef" class="org.biojavax.SimpleCrossRef" cascade="persist,merge,save-update">
                    <column name="dbxref_id" not-null="true"/>
                </many-to-one>   
                <property name="rank">
                    <column name="rank" sql-type="integer" length="4" not-null="true"/>
                </property>  
            </composite-element>
        </set>
        <set name="noteSet" table="bioentry_qualifier_value" lazy="false" sort="natural">
            <key column="bioentry_id" not-null="true"/>
            <composite-element class="org.biojavax.SimpleNote">
                <many-to-one name="term" class="org.biojavax.ontology.SimpleComparableTerm" cascade="persist,merge,save-update">
                    <column name="term_id" not-null="true"/>
                </many-to-one>   
                <property name="rank">
                    <column name="rank" sql-type="integer" length="5" not-null="true"/>
                </property>   
                <property name="value">
                    <column name="value" sql-type="text" not-null="false"/>
                </property>
            </composite-element>
        </set>
        
        <joined-subclass name="org.biojavax.bio.seq.SimpleRichSequence" table="biosequence">
            <key column="bioentry_id" not-null="true"/>
            <property name="seqVersion">
                <column name="version" sql-type="double" scale="3" precision="1" not-null="false"/>
            </property>   
            <property name="sequenceLength">
                <column name="length" sql-type="integer" length="38" not-null="false"/>
            </property> 
            <property name="alphabetName">
                <column name="alphabet" sql-type="string" length="12" not-null="false"/>
            </property> 
            <property name="stringSequence">
                <column name="seq" sql-type="text" not-null="false"/>
            </property>   
            <set name="featureSet" lazy="false" inverse="true" cascade="all-delete-orphan" sort="natural">
                <key column="bioentry_id"/>
                <one-to-many class="org.biojavax.bio.seq.SimpleRichFeature"/>
            </set>
        </joined-subclass>
                
    </class>

</hibernate-mapping>