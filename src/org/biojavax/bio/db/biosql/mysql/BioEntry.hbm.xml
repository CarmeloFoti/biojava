<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.bio.SimpleBioEntry" table="bioentry">

        <id name="id" type="integer" unsaved-value="null" column="bioentry_id">
            <generator class="identity"/>
        </id>

        <property name="name"/>
        <property name="identifier"/>
        <property name="accession"/>        
        <property name="description"/>       
        <property name="version"/>      
        <property name="division"/>    
        <many-to-one name="taxon" class="org.biojavax.bio.taxa.SimpleNCBITaxon" column="taxon_id" cascade="persist,merge,save-update"/>
        <many-to-one name="namespace" class="org.biojavax.SimpleNamespace" column="biodatabase_id" not-null="true" cascade="persist,merge,save-update"/>
        <set name="comments" lazy="false" cascade="all-delete-orphan" sort="natural">
            <key column="bioentry_id" not-null="true"/>
            <one-to-many class="org.biojavax.SimpleComment"/>
        </set>
        <set name="relationships" lazy="false" cascade="all-delete-orphan" sort="natural">
            <key column="object_bioentry_id" not-null="true"/>
            <one-to-many class="org.biojavax.bio.SimpleBioEntryRelationship"/>
        </set>
        <set name="rankedDocRefs" table="bioentry_reference" lazy="false" sort="natural">
            <key column="bioentry_id" not-null="true"/>
            <composite-element class="org.biojavax.SimpleRankedDocRef">
                <many-to-one name="documentReference" class="org.biojavax.SimpleDocRef" column="reference_id" not-null="true" cascade="persist,merge,save-update"/>
                <property name="rank"/>   
                <property name="start" column="start_pos"/>
                <property name="end" column="end_pos"/>
            </composite-element>
        </set>
        <set name="rankedCrossRefs" table="bioentry_dbxref" lazy="false" sort="natural">
            <key column="bioentry_id" not-null="true"/>
            <composite-element class="org.biojavax.SimpleRankedCrossRef">
                <many-to-one name="crossRef" class="org.biojavax.SimpleCrossRef" column="dbxref_id" not-null="true" cascade="persist,merge,save-update"/> 
                <property name="rank"/>  
            </composite-element>
        </set>
        <set name="noteSet" table="bioentry_qualifier_value" lazy="false" sort="natural">
            <key column="bioentry_id" not-null="true"/>
            <composite-element class="org.biojavax.SimpleNote">
                <many-to-one name="term" class="org.biojavax.ontology.SimpleComparableTerm" column="term_id" not-null="true" cascade="persist,merge,save-update"/>
                <property name="rank"/>   
                <property name="value"/>
            </composite-element>
        </set>
        
        <joined-subclass name="org.biojavax.bio.seq.SimpleRichSequence" table="biosequence">
            <key column="bioentry_id" not-null="true"/>
            <property name="seqVersion" column="version"/>
            <property name="sequenceLength" column="length"/>
            <property name="alphabetName" column="alphabet"/>
            <property name="stringSequence" column="seq" type="text"/>
            <set name="featureSet" lazy="false" inverse="true" cascade="all-delete-orphan" sort="natural">
                <key column="bioentry_id"/>
                <one-to-many class="org.biojavax.bio.seq.SimpleRichFeature"/>
            </set>
        </joined-subclass>
                
    </class>

</hibernate-mapping>