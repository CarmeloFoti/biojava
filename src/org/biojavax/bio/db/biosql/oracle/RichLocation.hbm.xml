<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.bio.seq.SimpleRichLocation" table="location">

        <id name="id" type="integer" unsaved-value="null" column="location_id">
            <generator class="sequence">
                <param name="sequence">location_pk_seq</param>
            </generator>
        </id>
        
        <many-to-one name="term" class="org.biojavax.ontology.SimpleComparableTerm" column="term_id" cascade="persist,merge,save-update"/>
        <many-to-one name="crossRef" class="org.biojavax.SimpleCrossRef" column="dbxref_id" cascade="persist,merge,save-update"/>
        <property name="rank"/>
        <property name="min" column="start_pos"/>
        <property name="max" column="end_pos"/>
        <property name="strandNum" column="strand"/>
        <set name="noteSet" table="location_qualifier_value" lazy="false" sort="natural">
            <key column="location_id" not-null="true"/>
            <composite-element class="org.biojavax.SimpleNote">
                <many-to-one name="term" class="org.biojavax.ontology.SimpleComparableTerm" column="term_id" not-null="true" cascade="persist,merge,save-update"/>
                <property name="value"/>
            </composite-element>
        </set>
        
    </class>

</hibernate-mapping>