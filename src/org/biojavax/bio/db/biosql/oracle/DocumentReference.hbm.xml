<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.SimpleDocRef" table="reference">

        <id name="id" type="integer" unsaved-value="null" column="reference_id">
            <generator class="sequence">
                <param name="sequence">reference_pk_seq</param>
            </generator>
        </id>

        <property name="title"/>
        <property name="authors"/>
        <property name="location"/>
        <property name="CRC" column="crc"/>
        <many-to-one name="crossref" class="org.biojavax.SimpleCrossRef" column="dbxref_id" cascade="persist,merge,save-update"/>
        
    </class>

</hibernate-mapping>