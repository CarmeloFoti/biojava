<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.ontology.SimpleComparableTriple" table="TERM_RELATIONSHIP">

        <id name="id" type="long" unsaved-value="null">
            <column name="TERM_RELATIONSHIP_ID" sql-type="long" unique="true" not-null="true"/>
            <generator class="sequence">
                <param name="sequence">TERM_RELATIONSHIP_PK_SEQ</param>
            </generator>
        </id>

        <many-to-one name="subject" class="org.biojavax.ontology.SimpleComparableTerm">
            <column name="SUBJECT_ID" not-null="true"/>
        </many-to-one>    
        <many-to-one name="object" class="org.biojavax.ontology.SimpleComparableTerm">
            <column name="OBJECT_ID" not-null="true"/>
        </many-to-one>    
        <many-to-one name="predicate" class="org.biojavax.ontology.SimpleComparableTerm">
            <column name="PREDICATE_ID" not-null="true"/>
        </many-to-one>       
        <many-to-one name="ontology" class="org.biojavax.ontology.SimpleComparableOntology">
            <column name="ONTOLOGY_ID" not-null="true"/>
        </many-to-one>   
        <join table="TERM_RELATIONSHIP_TERM" optional="true">
            <key column="TERM_RELATIONSHIP_ID"/>
            <many-to-one name="descriptors" class="org.biojavax.ontology.SimpleComparableTerm">
                <column name="TERM_ID" not-null="true"/>
            </many-to-one>
        </join>
    </class>

</hibernate-mapping>