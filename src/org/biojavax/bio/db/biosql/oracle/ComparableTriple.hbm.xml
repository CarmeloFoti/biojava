<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.ontology.SimpleComparableTriple" table="TERM_RELATIONSHIP">

        <id name="id" type="long" unsaved-value="null">
            <column name="TERM_RELATIONSHIP_ID" sql-type="long" unique="true" not-null="true"/>
            <generator class="sequence">
                <param name="sequence">TERM_RELATIONSHIP_PK_SEQ</param>
            </generator>
        </id>

        <many-to-one name="subject" class="org.biojavax.ontology.SimpleComparableTerm" cascade="all">
            <column name="SUBJECT_TERM_ID" not-null="true"/>
        </many-to-one>    
        <many-to-one name="object" class="org.biojavax.ontology.SimpleComparableTerm" cascade="all">
            <column name="OBJECT_TERM_ID" not-null="true"/>
        </many-to-one>    
        <many-to-one name="predicate" class="org.biojavax.ontology.SimpleComparableTerm" cascade="all">
            <column name="PREDICATE_TERM_ID" not-null="true"/>
        </many-to-one>       
        <many-to-one name="ontology" class="org.biojavax.ontology.SimpleComparableOntology" cascade="all">
            <column name="ONTOLOGY_ID" not-null="true"/>
        </many-to-one>   
        <set name="descriptors" table="TERM_RELATIONSHIP_TERM" lazy="false" cascade="all">
            <key column="TERM_RELATIONSHIP_ID"/>
            <many-to-many class="org.biojavax.ontology.SimpleComparableTerm">
                <column name="TERM_ID" not-null="true"/>
            </many-to-many>
        </set>
    </class>

</hibernate-mapping>
