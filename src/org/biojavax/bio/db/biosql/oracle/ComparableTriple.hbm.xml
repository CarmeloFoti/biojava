<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.ontology.SimpleComparableTriple" table="term_relationship">

        <id name="id" type="integer" unsaved-value="null" column="term_relationship_id">
            <generator class="sequence">
                <param name="sequence">term_relationship_pk_seq</param>
            </generator>
        </id>

        <many-to-one name="subject" class="org.biojavax.ontology.SimpleComparableTerm" column="subject_term_id" not-null="true" cascade="persist,merge,save-update"/>
        <many-to-one name="object" class="org.biojavax.ontology.SimpleComparableTerm" column="object_term_id" not-null="true" cascade="persist,merge,save-update"/>
        <many-to-one name="predicate" class="org.biojavax.ontology.SimpleComparableTerm" column="predicate_term_id" not-null="true" cascade="persist,merge,save-update"/>
        <many-to-one name="ontology" class="org.biojavax.ontology.SimpleComparableOntology" column="ontology_id" not-null="true" cascade="persist,merge,save-update"/>
        <set name="descriptors" table="term_relationship_term" lazy="false" cascade="all" sort="natural">
            <key column="term_relationship_id" not-null="true"/>
            <many-to-many class="org.biojavax.ontology.SimpleComparableTerm" column="term_id"/>
        </set>
    </class>

</hibernate-mapping>
