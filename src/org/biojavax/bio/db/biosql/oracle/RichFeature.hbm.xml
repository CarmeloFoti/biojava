<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.bio.seq.SimpleRichFeature" table="SEQFEATURE">

        <id name="id" type="integer" unsaved-value="null">
            <column name="SEQFEATURE_ID" sql-type="integer" unique="true" not-null="true"/>
            <generator class="sequence">
                <param name="sequence">SEQFEATURE_PK_SEQ</param>
            </generator>
        </id>

        <many-to-one name="parent" inverse="true">
            <column name="BIOENTRY_ID" not-null="true"/>
        </many-to-one>
        <many-to-one name="sourceTerm" inverse="true">
            <column name="SOURCE_TERM_ID" not-null="true"/>
        </many-to-one>
        <many-to-one name="typeTerm" inverse="true">
            <column name="TYPE_TERM_ID" not-null="true"/>
        </many-to-one>
        <property name="name">
            <column name="DISPLAY_NAME" sql-type="string" length="64" not-null="false"/>
        </property>
        <property name="rank">
            <column name="RANK" sql-type="integer" length="9" not-null="true"/>
        </property>
        <set name="locationSet" lazy="false">
            <key column="SEQFEATURE_ID"/>
            <one-to-many class="org.biojavax.bio.seq.SimpleRichLocation"/>
        </set>
        <set name="noteSet" table="SEQFEATURE_QUALIFIER_VALUE" lazy="false">
            <key column="SEQFEATURE_ID"/>
            <element class="org.biojavax.SimpleNote">
                <many-to-one name="term">
                    <column name="TERM_ID" not-null="true"/>
                </many-to-one>
                <property name="value">
                    <column name="VALUE" sql-type="string" length="4000" not-null="false"/>
                </property>
                <property name="rank">
                    <column name="RANK" sql-type="integer" length="3" not-null="true"/>
                </property>
            </element>
        </set>
        <set name="rankedCrossRefs" table="SEQFEATURE_DBXREF" lazy="false">
            <key column="SEQFEATURE_ID"/>
            <element class="org.biojavax.SimpleRankedCrossRef">
                <many-to-one name="crossRef">
                    <column name="DBXREF_ID" not-null="true"/>
                </many-to-one>   
                <property name="rank">
                    <column name="RANK" sql-type="integer" length="4" not-null="true"/>
                </property>  
            </element>
        </set>
        
    </class>

</hibernate-mapping>