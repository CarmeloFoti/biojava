<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.bio.seq.SimpleRichFeature" table="seqfeature">

        <id name="id" type="integer" unsaved-value="null" column="seqfeature_id">
            <generator class="sequence">
                <param name="sequence">seqfeature_pk_seq</param>
            </generator>
        </id>

        <many-to-one name="parent" class="org.biojavax.bio.seq.SimpleRichSequence" column="bioentry_id" not-null="true" cascade="persist,merge,save-update"/>
        <many-to-one name="sourceTerm" class="org.biojavax.ontology.SimpleComparableTerm" column="source_term_id" not-null="true" cascade="persist,merge,save-update"/>
        <many-to-one name="typeTerm" class="org.biojavax.ontology.SimpleComparableTerm" column="type_term_id" not-null="true" cascade="persist,merge,save-update"/>
        <property name="name" column="display_name"/>
        <property name="rank"/>
        <set name="locationSet" lazy="false" cascade="all-delete-orphan" sort="natural">
            <key column="seqfeature_id" not-null="true"/>
            <one-to-many class="org.biojavax.bio.seq.SimpleRichLocation"/>
        </set>
        <set name="noteSet" table="seqfeature_qualifier_value" lazy="false" sort="natural">
            <key column="seqfeature_id" not-null="true"/>
            <composite-element class="org.biojavax.SimpleNote">
                <many-to-one name="term" class="org.biojavax.ontology.SimpleComparableTerm" column="term_id" not-null="true" cascade="persist,merge,save-update"/>
                <property name="value"/>
                <property name="rank"/>
            </composite-element>
        </set>
        <set name="rankedCrossRefs" table="seqfeature_dbxref" lazy="false" sort="natural">
            <key column="seqfeature_id" not-null="true"/>
            <composite-element class="org.biojavax.SimpleRankedCrossRef">
                <many-to-one name="crossRef" class="org.biojavax.SimpleCrossRef" column="dbxref_id" not-null="true" cascade="persist,merge,save-update"/>
                <property name="rank"/>
            </composite-element>
        </set>
        <set name="featureRelationshipSet" lazy="false" cascade="all-delete-orphan" sort="natural">
            <key column="object_seqfeature_id" not-null="true"/>
            <one-to-many class="org.biojavax.bio.seq.SimpleRichFeatureRelationship"/>
        </set>
        
    </class>

</hibernate-mapping>
