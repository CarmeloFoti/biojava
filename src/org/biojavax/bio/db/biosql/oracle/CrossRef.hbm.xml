<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.SimpleCrossRef" table="DBXREF">

        <id name="id" type="long" unsaved-value="null">
            <column name="DBXREF_ID" sql-type="long" unique="true" not-null="true"/>
            <generator class="sequence">
                <param name="sequence">DBXREF_PK_SEQ</param>
            </generator>
        </id>

        <property name="dbname">
            <column name="DBNAME" sql-type="string" length="32" not-null="true"/>
        </property>
        <property name="accession">
            <column name="ACCESSION" sql-type="string" length="64" not-null="true"/>
        </property>
        <property name="version">
            <column name="VERSION" sql-type="integer" length="2" not-null="true"/>
        </property>
        <set name="noteSet" table="DBXREF_QUALIFIER_VALUE" lazy="false">
            <key column="DBXREF_ID"/>
            <composite-element class="org.biojavax.SimpleNote">
                <many-to-one name="term" class="org.biojavax.ontology.SimpleComparableTerm" cascade="all">
                    <column name="TERM_ID" not-null="true"/>
                </many-to-one>
                <property name="value">
                    <column name="VALUE" sql-type="string" length="256" not-null="true"/>
                </property>
                <property name="rank">
                    <column name="RANK" sql-type="integer" length="3" not-null="true"/>
                </property>
            </composite-element>
        </set>
        
        
    </class>

</hibernate-mapping>