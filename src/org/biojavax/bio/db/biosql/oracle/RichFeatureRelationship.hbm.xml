<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.bio.seq.SimpleRichFeatureRelationship" table="SEQFEATURE_RELATIONSHIP">

        <id name="id" type="long" unsaved-value="null">
            <column name="SEQFEATURE_RELATIONSHIP_ID" sql-type="long" unique="true" not-null="true"/>
            <generator class="sequence">
                <param name="sequence">SEQFEATURE_RELATIONSHIP_PK_SEQ</param>
            </generator>
        </id>

        <many-to-one name="term" class="org.biojavax.ontology.SimpleComparableTerm" cascade="all">
            <column name="TERM_ID" not-null="true"/>
        </many-to-one>
        <many-to-one name="subject" class="org.biojavax.bio.seq.SimpleRichFeature" cascade="all">
            <column name="SUBJECT_SEQFEATURE_ID" not-null="true"/>
        </many-to-one>
        <property name="rank">
            <column name="RANK" sql-type="integer" length="6" not-null="false"/>
        </property>
        
    </class>

</hibernate-mapping>