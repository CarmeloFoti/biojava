<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.ontology.SimpleComparableTerm" table="TERM">

        <id name="id" type="long" unsaved-value="null">
            <column name="TERM_ID" sql-type="long" unique="true" not-null="true"/>
            <generator class="sequence">
                <param name="sequence">TERM_PK_SEQ</param>
            </generator>
        </id>

        <property name="name">
            <column name="NAME" sql-type="string" length="256" not-null="true"/>
        </property>
        <property name="identifier">
            <column name="IDENTIFIER" sql-type="string" length="6" not-null="false"/>
        </property>
        <property name="description">
            <column name="DEFINITION" sql-type="string" length="4000" not-null="false"/>
        </property>
        <property name="obsolete">
            <column name="IS_OBSOLETE" sql-type="boolean" not-null="false"/>
        </property>        
        <many-to-one name="ontology" class="org.biojavax.ontology.SimpleComparableOntology" cascade="all">
            <column name="ONTOLOGY_ID" not-null="true"/>
        </many-to-one>
        <set name="synonymSet" table="TERM_SYNONYM" lazy="false">
            <key column="TERM_ID"/>
            <element type="string">
                <column name="NAME" sql-type="string" length="256" not-null="true"/>
            </element>
        </set>
        <set name="rankedCrossRefs" table="TERM_DBXREF" lazy="false">
            <key column="TERM_ID"/>
            <composite-element class="org.biojavax.SimpleRankedCrossRef">
                <many-to-one name="crossRef" class="org.biojavax.SimpleCrossRef" cascade="all">
                    <column name="DBXREF_ID" not-null="true"/>
                </many-to-one>   
                <property name="rank">
                    <column name="RANK" sql-type="integer" length="3" not-null="false"/>
                </property>  
            </composite-element>
        </set>
        
    </class>

</hibernate-mapping>