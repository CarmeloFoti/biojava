<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.bio.SimpleNamespace" table="BIODATABASE">

        <id name="id" type="integer" unsaved-value="null">
            <column name="BIODATABASE_ID" sql-type="integer" unique="true" not-null="true"/>
            <generator class="sequence">
                <param name="sequence">BIODATABASE_PK_SEQ</param>
            </generator>
        </id>

        <property name="name">
            <column name="NAME" sql-type="string" length="32" unique="true" not-null="true"/>
        </property>
        <property name="authority">
            <column name="AUTHORITY" sql-type="string" length="32" not-null="false"/>
        </property>
        <property name="description">
            <column name="DESCRIPTION" sql-type="string" length="256" not-null="false"/>
        </property>
        <property name="acronym">
            <column name="ACRONYM" sql-type="string" length="12" not-null="false"/>
        </property>
        <property name="URIString">
            <column name="URI" sql-type="string" length="128" not-null="false"/>
        </property>

    </class>

</hibernate-mapping>