<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.ontology.SimpleComparableOntology" table="ontology">

        <id name="id" type="integer" unsaved-value="null" column="ontology_id">
            <generator class="sequence">
                <param name="sequence">ontology_pk_seq</param>
            </generator>
        </id>

        <property name="name"/>
        <property name="description" column="definition"/>
        <set name="termSet" lazy="false" inverse="true" cascade="all-delete-orphan" sort="natural">
            <key column="ontology_id"/>
            <one-to-many class="org.biojavax.ontology.SimpleComparableTerm"/>
        </set>
        <set name="tripleSet" lazy="false" inverse="true" cascade="all-delete-orphan" sort="natural">
            <key column="ontology_id"/>
            <one-to-many class="org.biojavax.ontology.SimpleComparableTriple"/>
        </set>
                
    </class>

</hibernate-mapping>