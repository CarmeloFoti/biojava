<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.bio.seq.SimpleRichFeature" table="seqfeature">

        <id name="id" type="long" unsaved-value="null">
            <column name="seqfeature_id" sql-type="integer" unique="true" not-null="true"/>
            <generator class="identity"/>
        </id>

        <many-to-one name="parent" class="org.biojavax.bio.seq.SimpleRichSequence" cascade="persist,merge,save-update">
            <column name="bioentry_id" not-null="true"/>
        </many-to-one>
        <many-to-one name="sourceTerm" class="org.biojavax.ontology.SimpleComparableTerm" cascade="persist,merge,save-update">
            <column name="source_term_id" not-null="true"/>
        </many-to-one>
        <many-to-one name="typeTerm" class="org.biojavax.ontology.SimpleComparableTerm" cascade="persist,merge,save-update">
            <column name="type_term_id" not-null="true"/>
        </many-to-one>
        <property name="name">
            <column name="display_name" sql-type="string" length="64" not-null="false"/>
        </property>
        <property name="rank">
            <column name="rank" sql-type="integer" length="9" not-null="true"/>
        </property>
        <set name="locationSet" lazy="false" cascade="all-delete-orphan" sort="natural">
            <key column="SEQFEATURE_ID" not-null="true"/>
            <one-to-many class="org.biojavax.bio.seq.SimpleRichLocation"/>
        </set>
        <set name="noteSet" table="seqfeature_qualifier_value" lazy="false" sort="natural">
            <key column="seqfeature_id" not-null="true"/>
            <composite-element class="org.biojavax.SimpleNote">
                <many-to-one name="term" class="org.biojavax.ontology.SimpleComparableTerm" cascade="persist,merge,save-update">
                    <column name="term_id" not-null="true"/>
                </many-to-one>
                <property name="value">
                    <column name="value" sql-type="text" not-null="false"/>
                </property>
                <property name="rank">
                    <column name="rank" sql-type="integer" length="3" not-null="true"/>
                </property>
            </composite-element>
        </set>
        <set name="rankedCrossRefs" table="seqfeature_dbxref" lazy="false" sort="natural">
            <key column="seqfeature_id" not-null="true"/>
            <composite-element class="org.biojavax.SimpleRankedCrossRef">
                <many-to-one name="crossRef" class="org.biojavax.SimpleCrossRef" cascade="persist,merge,save-update">
                    <column name="dbxref_id" not-null="true"/>
                </many-to-one>   
                <property name="rank">
                    <column name="rank" sql-type="integer" length="4" not-null="true"/>
                </property>  
            </composite-element>
        </set>
        <set name="featureRelationshipSet" lazy="false" cascade="all-delete-orphan" sort="natural">
            <key column="object_seqfeature_id" not-null="true"/>
            <one-to-many class="org.biojavax.bio.seq.SimpleRichFeatureRelationship"/>
        </set>
        
    </class>

</hibernate-mapping>
