<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.SimpleDocRef" table="reference">

        <id name="id" type="long" unsaved-value="null">
            <column name="reference_id" sql-type="long" unique="true" not-null="true"/>
            <generator class="identity"/>
        </id>

        <property name="title">
            <column name="title" sql-type="text" not-null="false"/>
        </property>
        <property name="authors">
            <column name="authors" sql-type="text" not-null="true"/>
        </property>
        <property name="location">
            <column name="location" sql-type="text" not-null="true"/>
        </property>
        <property name="CRC">
            <column name="crc" sql-type="string" length="32" not-null="false"/>
        </property>
        <many-to-one name="crossref" class="org.biojavax.SimpleCrossRef" cascade="persist,merge,save-update">
            <column name="dbxref_id" not-null="false"/>
        </many-to-one>
        
    </class>

</hibernate-mapping>