<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.SimpleCrossRef" table="dbxref">

        <id name="id" type="integer" unsaved-value="null" column="dbxref_id">
            <generator class="identity"/>
        </id>

        <property name="dbname"/>
        <property name="accession"/>
        <property name="version"/>
        <set name="noteSet" table="dbxref_qualifier_value" lazy="false" sort="natural">
            <key column="dbxref_id" not-null="true"/>
            <composite-element class="org.biojavax.SimpleNote">
                <many-to-one name="term" class="org.biojavax.ontology.SimpleComparableTerm" column="term_id" not-null="true" cascade="persist,merge,save-update"/>
                <property name="value"/>
                <property name="rank"/>
            </composite-element>
        </set>        
        
    </class>

</hibernate-mapping>