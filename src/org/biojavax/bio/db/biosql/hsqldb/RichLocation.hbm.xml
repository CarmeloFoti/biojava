<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.bio.seq.SimpleRichLocation" table="location">

        <id name="id" type="long" unsaved-value="null">
            <column name="location_id" sql-type="long" unique="true" not-null="true"/>
            <generator class="identity"/>
        </id>
        
        <many-to-one name="term" class="org.biojavax.ontology.SimpleComparableTerm" cascade="persist,merge,save-update">
            <column name="term_id" not-null="false"/>
        </many-to-one>
        <many-to-one name="crossRef" class="org.biojavax.SimpleCrossRef" cascade="persist,merge,save-update">
            <column name="dbxref_id" not-null="false"/>
        </many-to-one>
        <property name="rank">
            <column name="rank" sql-type="integer" length="4" not-null="true"/>
        </property>
        <property name="min">
            <column name="start_pos" sql-type="integer" length="10" not-null="true"/>
        </property>
        <property name="max">
            <column name="end_pos" sql-type="integer" length="10" not-null="true"/>
        </property>
        <property name="strandNum">
            <column name="strand" sql-type="number" length="1" not-null="true"/>            
        </property>
        <set name="noteSet" table="location_qualifier_value" lazy="false" sort="natural">
            <key column="location_id" not-null="true"/>
            <composite-element class="org.biojavax.SimpleNote">
                <many-to-one name="term" class="org.biojavax.ontology.SimpleComparableTerm" cascade="persist,merge,save-update">
                    <column name="term_id" not-null="true"/>
                </many-to-one>
                <property name="value">
                    <column name="value" sql-type="string" length="255" not-null="true"/>
                </property>
            </composite-element>
        </set>
        
    </class>

</hibernate-mapping>