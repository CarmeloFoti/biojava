<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.ontology.SimpleComparableOntology" table="ontology">

        <id name="id" type="long" unsaved-value="null">
            <column name="ontology_id" sql-type="long" unique="true" not-null="true"/>
            <generator class="identity"/>
        </id>

        <property name="name">
            <column name="name" sql-type="string" length="64" not-null="true"/>
        </property>
        <property name="description">
            <column name="definition" sql-type="string" length="4000" not-null="false"/>
        </property>
        <set name="termSet" lazy="false" inverse="true" cascade="all-delete-orphan" sort="natural">
            <key column="ontology_id"/>
            <one-to-many class="org.biojavax.ontology.SimpleComparableTerm"/>
        </set>
        <set name="tripleSet" lazy="false" inverse="true" cascade="all-delete-orphan" sort="natural">
            <key column="ontology_id"/>
            <one-to-many class="org.biojavax.ontology.SimpleComparableTriple"/>
        </set>
                
    </class>

</hibernate-mapping>