<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.bio.seq.SimpleRichFeatureRelationship" table="seqfeature_relationship">

        <id name="id" type="long" unsaved-value="null">
            <column name="seqfeature_relationship_id" sql-type="long" unique="true" not-null="true"/>
            <generator class="identity"/>
        </id>

        <many-to-one name="term" class="org.biojavax.ontology.SimpleComparableTerm" cascade="persist,merge,save-update">
            <column name="term_id" not-null="true"/>
        </many-to-one>
        <many-to-one name="subject" class="org.biojavax.bio.seq.SimpleRichFeature" cascade="persist,merge,save-update">
            <column name="subject_seqfeature_id" not-null="true"/>
        </many-to-one>
        <property name="rank">
            <column name="rank" sql-type="integer" length="6" not-null="false"/>
        </property>
        
    </class>

</hibernate-mapping>