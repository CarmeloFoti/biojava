<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.biojavax.ontology.SimpleComparableTerm" table="term">

        <id name="id" type="integer" unsaved-value="null" column="term_id">
            <generator class="identity"/>
        </id>

        <property name="name"/>
        <property name="identifier"/>
        <property name="description" column="definition"/>
        <property name="obsolete" column="is_obsolete"/>
        <many-to-one name="ontology" class="org.biojavax.ontology.SimpleComparableOntology" column="ontology_id" not-null="true" cascade="persist,merge,save-update"/>
        <set name="synonymSet" table="term_synonym" lazy="false" sort="natural">
            <key column="term_id"/>
            <element type="string" column="name"/>
        </set>
        <set name="rankedCrossRefs" table="term_dbxref" lazy="false" sort="natural">
            <key column="term_id"/>
            <composite-element class="org.biojavax.SimpleRankedCrossRef">
                <many-to-one name="crossRef" class="org.biojavax.SimpleCrossRef" column="dbxref_id" not-null="true" cascade="persist,merge,save-update"/>
                <property name="rank"/>
            </composite-element>
        </set>
        
    </class>

</hibernate-mapping>